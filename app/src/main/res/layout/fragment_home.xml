<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNav"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card 1: Book a Court -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBookCourt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivBookCourt"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvBookCourtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book a Court"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBookCourtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click here to book a court."
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 2: See Reservations -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSeeReservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivSeeReservations"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvSeeReservationsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See Reservations"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSeeReservationsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click here to see reservations."
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 3: Join Existing Match -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardJoinMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivJoinMatch"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvJoinMatchTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join Existing Match"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvJoinMatchDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click here to join an existing match."
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>