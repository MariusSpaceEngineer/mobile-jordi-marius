<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Date" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimestamps"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp" />


    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cbMatchCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Is a public match" />

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvSelectedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvSelectMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Select Match Type:" />

        <RadioGroup
            android:id="@+id/rgMatchType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbCompetitive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Competitive" />

            <RadioButton
                android:id="@+id/rbFriendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friendly" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvSelectGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Gender Type:" />

        <RadioGroup
            android:id="@+id/rgGenderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAllPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Players" />

            <RadioButton
                android:id="@+id/rbMixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mixed" />

            <RadioButton
                android:id="@+id/rbMenOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men Only" />

            <RadioButton
                android:id="@+id/rbWomenOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women Only" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnBookCourt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Book Court" />

</LinearLayout>
</ScrollView>