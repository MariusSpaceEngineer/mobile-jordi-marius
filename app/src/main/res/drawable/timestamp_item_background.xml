<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- background color when selected -->
            <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="#000000" /> <!-- border color when selected -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- background color when not selected -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
